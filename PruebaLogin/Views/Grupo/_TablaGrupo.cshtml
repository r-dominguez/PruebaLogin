@using PruebaLogin.Models;
@using PruebaLogin.ClasesAuxiliares;
@model  PaginadorGenerico<GrupoCLS>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.Label("Id Grupo")</th>
            <th>@Html.Label("Nombre Grupo")</th>
            <th width="9%">Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Resultado)
        {
            <tr>
                <td>@item.idGrupo</td>
                <td>@item.nombreGrupo</td>
                <td>
                    <button type="button" onclick="Editar(@item.idGrupo)" class="bi bi-pencil-square  btn btn-primary" data-toggle="modal" data-target="#modalAgregar">
                    </button>
                    <button type="button" onclick="Eliminar(@item.idGrupo)" class="bi bi-trash btn btn-danger" data-toggle="modal" data-target="#modalConfirmEliminar">
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


<!--paginador del listado -->

@if (Model.Resultado.Count() > 0)
{
    <span>
        <strong>@Model.TotalRegistros</strong> registros encontrados
    </span>
    <span>&nbsp;|&nbsp;</span>
    <span>
        Página <strong>@(Model.PaginaActual)</strong> de
        <strong>@Model.TotalPaginas</strong>
    </span>
    <span>&nbsp;|&nbsp;</span>
}
else
{
    <span>No hay resultados para esta búsqueda</span>
    <span>&nbsp;|&nbsp;</span>
}

@if (Model.PaginaActual > 1)
{
    @Ajax.ActionLink("<<", "Filtrar", new { pagina = 1, nombreusuario = "nu" },
